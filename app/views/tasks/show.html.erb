<% edit_icon = '<i class="far fa-edit"></i> Edit this task'.html_safe %>
<% back_icon = '<i class="fas fa-undo-alt"></i> Back to list'.html_safe %>

<div class="container">
  <div class="header d-flex justify-content-between">
    <h1><%= @task.title %></h1>
    <%= link_to edit_icon, edit_path, class: "btn btn-outline-secondary" %>
  </div>
  <div class="body">
    <p id="details-task"><%= @task.details %></p>

    <% if @task.completed %>
      <input id="checkbox" type="checkbox" checked disabled>
      <label for="checkbox">This task is completed</label>
    <% else %>
      <input id="checkbox" type="checkbox" disabled>
      <label for="checkbox">This task is not completed yet</label>
    <% end %>
  </div>
  <div class="footer">
    <hr>
    <%= link_to back_icon, tasks_path %>
  </div>
</div>
